<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
			   creationComplete="clickHandler()" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Style>
	    @namespace local "probe.chalkboard.*";
    	
    	local|NoteCard
    	{
    	    skinClass: ClassReference("probe.chalkboard.NoteCardSkin");
    	}
	</fx:Style>
	
	<fx:Script>
	    <![CDATA[
	       
	        
	        private function clickHandler():void
	        {
				
				for(var i:int=1;i<11;i++){
					var noteCard:NoteCard = new NoteCard();
					
					noteCard._title = "Title nr. " +i;
					box.addElement(noteCard);
				}
			}
	            
	    ]]>
	</fx:Script>
	
	<mx:VBox id="box"/>
</s:Application>
